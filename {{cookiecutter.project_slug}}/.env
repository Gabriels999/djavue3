DEBUG=True
SECRET_KEY='cria-um-segredo-qualquer'
LANGUAGE_CODE=pt-br
TIME_ZONE=America/Sao_Paulo

POSTGRES_DB=db_{{ cookiecutter.app_name }}
POSTGRES_USER={{ cookiecutter.app_name }}
POSTGRES_PASSWORD={{ cookiecutter.app_name }}

## üñ•Ô∏è Para uso local via virtualenv
{% if cookiecutter.docker_usage == 'üê≥ use docker by default' %}#{% endif %}POSTGRES_HOST=localhost
{% if cookiecutter.docker_usage == 'üê≥ use docker by default' %}#{% endif %}POSTGRES_PORT=15432
{% if cookiecutter.docker_usage == 'üê≥ use docker by default' %}#{% endif %}DATABASE_URL=postgres://{{ cookiecutter.app_name }}:{{ cookiecutter.app_name }}@localhost:15432/db_{{ cookiecutter.app_name }}
{% if cookiecutter.use_sqlite_local_env == 'yes' %}
DATABASE_URL=sqlite:///db_local.sqlite3
{% endif %}

## üê≥ Para uso via container
{% if cookiecutter.docker_usage == 'üì¶ use venv npm by default' %}#{% endif %}POSTGRES_HOST=postgres
{% if cookiecutter.docker_usage == 'üì¶ use venv npm by default' %}#{% endif %}POSTGRES_PORT=5432
{% if cookiecutter.docker_usage == 'üì¶ use venv npm by default' %}#{% endif %}DATABASE_URL=postgres://{{ cookiecutter.app_name }}:{{ cookiecutter.app_name }}@postgres:5432/db_{{ cookiecutter.app_name }}

# Para funcionar local
ALLOWED_HOSTS=localhost,backend
CSRF_TRUSTED_ORIGINS=http://localhost,http://backend,http://127.0.0.1
{% if cookiecutter.package_manager == 'poetry' %}
POETRY_VIRTUALENVS_CREATE=false
POETRY_CACHE_DIR='/var/cache/pypoetry'
{% endif %}
PORT=3000 
